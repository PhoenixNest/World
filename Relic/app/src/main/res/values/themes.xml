<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Relic" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:enforceStatusBarContrast" tools:ignore="NewApi">false</item>
        <item name="android:enforceNavigationBarContrast" tools:ignore="NewApi">false</item>
    </style>

    <style name="Theme.Relic.Splash" parent="Theme.Relic">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/main_theme_color</item>
    </style>

</resources>