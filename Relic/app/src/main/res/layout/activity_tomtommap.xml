<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainThemeColor"
    android:fitsSystemWindows="true"
    tools:context=".feature.activities.map.TomTomMapActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Tomtom"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="8dp">

        <com.tomtom.sdk.map.display.ui.MapView xmlns:tomtom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tomtomMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tomtom:mapKey="@string/tomtom_dev_key" />

    </androidx.cardview.widget.CardView>

</FrameLayout>